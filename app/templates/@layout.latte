<!--[if gt IE 9]><!--><html class="no-js" lang="en"><!--<![endif]-->
	<head>
		{if !\Nette\Diagnostics\Debugger::$productionMode}
			<link rel="stylesheet" href="{$basePath}/assets/css/reset.css"/>
			<link rel="stylesheet" href="{$basePath}/assets/css/jquery-ui-1.10.4.css"/>
			<link rel="stylesheet" href="{$basePath}/assets/css/bootstrap.css"/>
			<link rel="stylesheet" href="{$basePath}/assets/css/bootstrap-theme.css"/>
			<link rel="stylesheet" href="{$basePath}/assets/css/style.css"/>
		{else}
			<link rel="stylesheet" href="{$basePath}/assets/output/styles.css" />
		{/if}
	
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

		<title>{include #title}</title>

		<meta name="title" content="{include #title}"/>
		<meta name="description" content="Jednoduchý systém na zprávu faktur (školní projekt - DBS2)"/>
		<meta name="author" content="Tomáš Kolinger, Tomáš Limberk"/>

		{if !\Nette\Diagnostics\Debugger::$productionMode}
			<script src="{$basePath}/assets/js/modernizr-2.7.0.min.js"></script>
			<script src="{$basePath}/assets/js/jquery-1.10.2.min.js"></script>
			<script src="{$basePath}/assets/js/bootstrap.js"></script>
			<script src="{$basePath}/assets/js/jquery.nette-ajax.js"></script>
			<script src="{$basePath}/assets/js/jquery-ui-1.10.4.js"></script>
			<script src="{$basePath}/assets/js/jquery-ui-timepicker-addon.js"></script>
			<script src="{$basePath}/assets/js/functions.js"></script>
		{else}
			<script src="{$basePath}/assets/output/scripts.js"></script>
		{/if}
	</head>
	<body>
		<div class="container">
			{include 'components/header.latte'}
			{include 'components/navigation.latte'}

			<h2>{include #title}</h2>

			<div class="alert alert-{$flash->type} alert-dismissable" n:foreach="$flashes as $flash">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				{$flash->message}
			</div>

			{include #content}
		</div>

		<!--[if lt IE 7]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade
			to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google
			Chrome Frame</a> to experience this site.</p><![endif]-->

		{block scripts}{/block}
	</body>
</html>
